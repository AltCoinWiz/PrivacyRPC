{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PrivacyRPC",
  "version": "1.0.0",
  "identifier": "com.privacyrpc.desktop",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "PrivacyRPC",
        "width": 400,
        "height": 600,
        "minWidth": 360,
        "minHeight": 500,
        "center": true,
        "resizable": true,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "licenseFile": "LICENSE.rtf",
    "resources": [
      "tor/**/*"
    ],
    "targets": ["nsis", "deb", "appimage", "dmg"],
    "windows": {
      "nsis": {
        "template": "nsis/installer.nsi",
        "headerImage": "installer-header.bmp",
        "sidebarImage": "installer-sidebar.bmp",
        "installerIcon": "icons/icon.ico",
        "displayLanguageSelector": false
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.13",
      "dmg": {
        "appPosition": { "x": 180, "y": 170 },
        "applicationFolderPosition": { "x": 480, "y": 170 }
      }
    },
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  }
}
